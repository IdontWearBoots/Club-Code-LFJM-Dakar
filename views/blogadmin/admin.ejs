                <img class="nav-item-image" src="../images/nav_bar/info-unselected.png" alt="problem">
            </li>
        </a>
    </ul>
    
    <div class="content">

        <form action="blog-admin" method="post">
            
            <h1 class="title">Cr√©ez une nouvelle publication</h1>
            
            <div class="image-wrapper">
                <div class="image">
                    <br>
                    <img src="" alt="" class="imageDisplay">
                    <br>
                </div>
                
                <br>
                <br>
            </div>
            
            <br>
            <br>
            <br>
            
            <label for="imageSelect" id="labelImageSelector">+</label>
            <input type="file" accept="image/*" name="imageSelect" id="imageSelect">
            
            <br>
            <br>
            
            <!-- <label for="postTitle">Donnez un titre a votre publication: </label> -->
            <input class="text" type="text" id="postTitle" name="postTitle" placeholder="Titre de la publication">
            
            <br>
            <br>
            
            <!-- <label for="postBody"></label> -->
            <textarea class="text" placeholder="Contenu de la publication" name="postBody" id="postBody"></textarea>
            
            <br>
            <br>
        
            <button type="submit">Publier</button>

            <br>
            <br>                

        </form>

    </div>
    
    <script>
        const fr = new FileReader();

        $("#imageSelect").on("change", function(event) {
            fr.readAsDataURL(event.target.files[0]);

            fr.onload = e => {
                $(".imageDisplay").attr("src", e.target.result);
            }
        });
        </script>

</body>

